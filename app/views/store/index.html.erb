<title> Smarty </title>
<h1>Smarts Phone Store</h1>
<div id= "smarts">
  <% @smarts.each do |smart| %>
  <div class ="smart">

    <div class="image">
      <%= image_tag(smart.image_url, :height => "100" ) %>
    </div>

    <div class="content">
        <h2>
         <%= smart.name %>
        </h2>
        <p>
            <%= smart.description %>
        </p>
    </div>

    <div class="price">
      <div>
            <%= smart.price %>
      </div>
      <div>
        <%=button_to "Comprar", line_items_path(:smart_id => smart.id), :remote => true %>
      </div>
                <%#agregar el boton de comprar%>

    </div>

    <div class="clear"></div>
   </div>
   <%end %>
</div>

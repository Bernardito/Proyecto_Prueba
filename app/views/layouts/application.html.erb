<!DOCTYPE html>
<html>
<head>
  <title>Smarty by Bancard</title>
  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
</head>
<body id= "store">
    <div id="banner" >
      <%= @page_tittle || "SmartyStore" %>
      <%= image_tag("logo_256.png", :height => 64, :width => 64)%>
    </div>
    <div id= "columns">

        <div id="side">

            <div>
                <a href="#">Home</a>
                <a href="#">Questions</a>
                <a href="#">News</a>
                <a href="#">Contact</a>
            </div>
            <div id= "cart">
                <% if @cart %>
                   <%= render @cart, :message => 'Carrito de compras'  %>
                        <%# locals = variable local del partial
                        # :cart = nombre de variable dentro del partial %>
                <% end %>
            </div>
              <%# agregar el total de la compra %>

        <div id="main">
             <%= yield %>
        </div>
        <div class="clear"> </div>
    </div>


</body>
</html>
